<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_20sdp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/careerimg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get career guidance"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Confused what career path to pursue?"
        android:textColor="#F5504E4E"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get free guidance with Chooser!"
        android:textColor="#F5504E4E"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@drawable/round_btn_bg"/>
        <LinearLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/bgcolor"/>
        <LinearLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:background="@drawable/bgcolor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_100sdp">

        <TextView
            android:id="@+id/skip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skip"
            android:textColor="#5A19CF"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_18sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn_bg"
            android:text="NEXT"
            android:layout_marginLeft="@dimen/_100sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"/>
    </LinearLayout>

</LinearLayout>